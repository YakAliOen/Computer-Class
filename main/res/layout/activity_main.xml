<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header Logo -->
    <ImageView
        android:id="@+id/logoHeader"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Blue Hero Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/heroSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#0F3A66"
        app:layout_constraintTop_toBottomOf="@id/logoHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Left Text -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:textColor="#FFD54F"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/heroImage"
            android:layout_margin="24dp" />


        <TextView
            android:id="@+id/titleSchool"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SURABAYA CAMBRIDGE SCHOOL"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/heroImage"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp" />


        <TextView
            android:id="@+id/titleLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SENIOR HIGH SCHOOL"
            android:textColor="#FFD54F"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/titleSchool"
            app:layout_constraintStart_toStartOf="@id/titleSchool"
            app:layout_constraintEnd_toEndOf="@id/titleSchool"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="We prepare students for higher education with a curriculum designed to challenge and inspire."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/titleLevel"
            app:layout_constraintStart_toStartOf="@id/titleLevel"
            app:layout_constraintEnd_toEndOf="@id/titleLevel"
            android:layout_marginTop="12dp" />


        <!-- Login Buttons -->
        <LinearLayout
            android:id="@+id/loginButtonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintStart_toStartOf="@id/description"
            app:layout_constraintEnd_toEndOf="@id/description">

            <Button
                android:id="@+id/btnLoginStudent"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="Login as Student"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnLoginTeacher"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="Login as Teacher"
                android:layout_marginStart="8dp" />

        </LinearLayout>


        <!-- Right Image -->
        <ImageView
            android:id="@+id/heroImage"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:src="@drawable/students"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
